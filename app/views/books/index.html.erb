<h1>Books</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
  </tr>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
        <%= book.title %>
      </td>
      <td>
        <%= book.body %>
      </td>
      <td>
        <%= link_to "Show", book_path(book.id) %>
      </td>
      <td>
        <%= link_to "Edit", edit_book_path(book.id) %>
      </td>
      <td>
        <%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<h2>New Book</h2>
