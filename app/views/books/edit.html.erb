<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
  <div class="text">
    <div class="book-title">Title</div>
    <%= f.text_field :title %>
  </div>
  <div class="text">
    <div class="book-body">Body</div>
    <%= f.text_area :body %>
  </div>
  <div class="edit">
    <%= f.submit 'Update Book' %>
  </div>
<% end %>

<div class="link">
  <%= link_to "Show", book_path(@book.id), class: "color" %>
  |
  <%= link_to "Back", "/books", class: "color" %>
</div>